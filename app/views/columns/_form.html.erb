      </tr>
    </thead>

    <tbody>

      <td>
          <%= form.check_box :nn %>
      </td>
      <td>
          <%= form.check_box :uq %>
      </td>
      <td>
          <%= form.check_box :bin %>
      </td>
      <td>
          <%= form.check_box :un %>
      </td>
      <td>
          <%= form.check_box :zf %>
      </td>
      <td>
          <%= form.check_box :g %>
      </td>
    </tbody>
  </table>
</div>


  <div class="field">
    <%= form.label :ms_column_types_id %>
    <%= form.select :ms_column_types_id, options_for_select(MsColumnType.all.map{|s|[s.options_for_select, s.id]}) %>
  </div>

  <div class="field">
    <%= form.text_field :tables_id, value: @table.id, style: 'display: none'%>
