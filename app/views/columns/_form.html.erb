      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :system_name %>
    <%= form.text_field :system_name %>
  </div>

  <div class="field">
    <%= form.label :database_name %>
    <%= form.text_field :database_name %>
  </div>

  <div class="field">
  <table>
    <thead>
      <tr>

        <th>Nn</th>
        <th>Uq</th>
        <th>Bin</th>
        <th>Un</th>
        <th>Zf</th>
        <th>G</th>
